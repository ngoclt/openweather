<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ct_container"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/border_background">

    <TextView
        android:id="@+id/tv_forecast_date"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/avenir_ltstd_light"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_forecast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/weathericons"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tv_forecast_date" />

    <TextView
        android:id="@+id/tv_forecast_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/avenir_ltstd_light"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>